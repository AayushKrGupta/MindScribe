<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MindScribe" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Required: Theme background color. This is the color behind the icon. -->
        <item name="windowSplashScreenBackground">@color/white</item> <!-- Use a color from your palette -->

        <!-- Required: The icon to display. -->
        <!-- Replace @drawable/splash_icon with your actual drawable resource -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- Optional: Duration for the splash screen to remain visible. -->
        <!-- Set to 0 to dismiss immediately after content is ready. -->
        <!-- If you want a fixed duration, you can set it here, e.g., 3000ms -->
        <!-- <item name="windowSplashScreenAnimationDuration">1000</item> -->

        <!-- Optional: Post-splash screen theme. This is the theme applied after the splash screen is dismissed. -->
        <item name="postSplashScreenTheme">@style/Theme.MindScribe</item>
    </style>
</resources>