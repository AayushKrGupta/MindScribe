
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base app theme -->
    <style name="Base.Theme.MindScribe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Your regular theme customization -->
    </style>

    <!-- Light theme variant -->
    <style name="Theme.MindScribe" parent="Base.Theme.MindScribe" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Snapchat yellow background -->
        <item name="windowSplashScreenBackground">@color/snapchat_yellow</item>

        <!-- Splash icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreeen</item>
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- 1 second -->

        <!-- Exit animation -->

        <!-- Post-splash theme -->
        <item name="postSplashScreenTheme">@style/Theme.MindScribe</item>
    </style>
</resources>